<p id="notice"><%= notice %></p>

<h1>Listing Doctors</h1>

<table>
  <thead>
    <tr>
	  <th>ID</th>
      <th>Name</th>
      <th>Address</th>
      <th>Degreefrom</th>
      <th>Experience</th>
      <th colspan="3"></th>
	  <th></th>
    </tr>
  </thead>

  <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
	    <td><%=doctor.id %></td>
        <td><%= doctor.name %></td>
        <td><%= doctor.address %></td>
        <td><%= doctor.degreefrom %></td>
        <td><%= doctor.experience %></td>
        <td><%= link_to 'Show', doctor %></td>
        <td><%= link_to 'Edit', edit_doctor_path(doctor) %></td>
        <td><%= link_to 'Destroy', doctor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		<td><%= link_to 'New appointment', new_appointment_path(:doctor_id => doctor.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

