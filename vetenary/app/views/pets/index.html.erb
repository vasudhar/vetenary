<h1>Listing Pets</h1>

<table>
  <thead>
    <tr>
	  <th>ID</th>
      <th>Name</th>
      <th>Customer</th>
      <th>Pdoctor</th>
      <th colspan="3"></th>
	  <th></th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
	    <td><%= pet.id %></td>
        <td><%= pet.name %></td>
        <td><%= pet.customer_id %></td>
        <td><%= pet.pdoctor_id %></td>
        <td><%= link_to 'Show', pet %></td>
        <td><%= link_to 'Edit', edit_pet_path(pet) %></td>
        <td><%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		<td><%= link_to 'New Appointment', new_appointment_path(:pet_id => pet.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

